<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="biz.riman.erp.batch.mapper.salesOrder.IfSalesOrderMapper">
    <insert id="insertInterfaceSalesOrder" parameterType="biz.riman.erp.batch.dto.salesOrder.InterfaceSalseOrderDto">
        /* IfSalesOrder.insertInterfaceSalesOrder */
        INSERT INTO if_sales_order
        (
            purchase_order_by_customer
           ,sales_order
           ,result_status
           ,result_status_detail
           ,http_status
           ,exceptions
           ,created_datetime
        )
        VALUES (
            #{purchaseOrderByCustomer}
           ,#{salesOrder}
           ,#{resultStatus}
           ,#{resultStatusDetail}
           ,#{httpStatus}
           ,#{exceptions}
           ,#{createdDatetime}
        )
    </insert>
    
    <insert id="insertInterfaceSalesOrderItem">
        /* IfSalesOrder.insertInterfaceSalesOrderItem */
        INSERT INTO if_sales_order_item
        (
            purchase_order_by_customer
           ,product_id
           ,requested_quantity
           ,sales_order
           ,sales_order_item
           ,result_status
           ,http_status
           ,exceptions
           ,created_datetime
        )
        VALUES
        <foreach item="item" collection="items" separator=",">
        (
            #{purchaseOrderByCustomer}
           ,#{item.productId}
           ,#{item.RequestedQuantity}
           ,#{salesOrder}
           ,#{item.salesOrderItem}
           ,#{resultStatus}
           ,#{httpStatus}
           ,#{exceptions}
           ,#{item.createdDatetime}
        )
        </foreach>
    </insert>
</mapper>